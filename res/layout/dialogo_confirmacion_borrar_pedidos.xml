<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="590dp"
    android:layout_height="fill_parent"
    android:background="@color/colorFondoDatosNuevoLP" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tituloDCBP"
    	android:layout_width="590dp"
    	android:layout_height="wrap_content"
    	android:background="@color/colorFondoDatosLP" >
    
		<TextView
			android:id="@+id/textoInfoDCBP"
			android:layout_width="590dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="@color/colorFondoDatoArticuloLP"
			android:textColor="@android:color/white"
			android:textSize="30px"
			android:text="CONFIRMACIÓN BORRAR PEDIDOS" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/textoMensajeAvisoDCBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tituloDCBP"
        android:textColor="@android:color/white"
        android:textSize="20px" 
        android:text="¿Desea eliminar los siguientes pedidos?" />
    
	<ScrollView 
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:id="@+id/scrollMensajeAvisoDCBP"
		android:layout_width="wrap_content" 
		android:layout_height="150dp"
		android:layout_marginTop="15dp"
		android:layout_alignLeft="@+id/textoMensajeAvisoDCBP"
		android:layout_below="@+id/textoMensajeAvisoDCBP"
		android:fadeScrollbars="false">
		
    <TextView
        android:id="@+id/textoScrollMensajeAvisoDCBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20px" />
		
	</ScrollView>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollMensajeAvisoDCBP"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/siBotonDCBP"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="SI" />
        
        <Button
            android:id="@+id/noBotonDCBP"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="NO" />
        
    </LinearLayout>
</RelativeLayout>