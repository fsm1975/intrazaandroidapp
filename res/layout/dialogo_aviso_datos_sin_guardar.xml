<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="590dp"
    android:layout_height="fill_parent"
    android:background="@color/colorFondoDatosNuevoLP" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tituloAvisoDatosSinGuardar"
    	android:layout_width="590dp"
    	android:layout_height="wrap_content"
    	android:background="@color/colorFondoDatosLP" >
    
		<TextView
			android:id="@+id/textoInfoAvisoDatosSinGuardar"
			android:layout_width="590dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="@color/colorFondoDatoArticuloLP"
			android:textColor="@android:color/white"
			android:textSize="30px"
			android:text="CONFIRMACION DATOS SIN GUARDAR" />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/textoMensajeAvisoDatosSinGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tituloAvisoDatosSinGuardar"
        android:text="Hay datos en el pedido actual que no han sido guardados.\nÂ¿Desea guardarlos?"
        android:textColor="@android:color/white"
        android:textSize="20px" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoMensajeAvisoDatosSinGuardar"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/siBotonAvisoDatosSinGuardar"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="SI" />
        
        <Button
            android:id="@+id/noBotonAvisoDatosSinGuardar"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="NO" />

        <Button
            android:id="@+id/cancelarBotonAvisoDatosSinGuardar"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="CANCELAR" />
        
    </LinearLayout>
</RelativeLayout>