<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="660dp"
    android:layout_height="fill_parent"
    android:background="@color/colorFondoDatosNuevoLP" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/DMOP"
    	android:layout_width="660dp"
    	android:layout_height="wrap_content"
    	android:background="@color/colorFondoDatosLP" >
    
		<TextView
			android:id="@+id/tituloDMOP"
			android:layout_width="660dp"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:background="@color/colorFondoDatoArticuloLP"
			android:textColor="@android:color/white"
			android:textSize="30px" />
    </RelativeLayout>
    
    <TextView
		android:id="@+id/textoObservacionesDMOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/DMOP"
        android:text="Observaciones:"
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <EditText
		android:id="@+id/observacionesDMOP"
        android:layout_width="600dp"
        android:layout_height="155dp"
		android:gravity="top"
        android:layout_alignLeft="@+id/textoObservacionesDMOP"
		android:layout_marginTop="5dp"
		android:layout_below="@+id/textoObservacionesDMOP"
        android:inputType="none"
		android:clickable="false" 
        android:cursorVisible="false" 
        android:focusable="false" 
        android:focusableInTouchMode="false"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/observacionesDMOP"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/aceptarDMOP"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="ACEPTAR" />
        
    </LinearLayout>
</RelativeLayout>